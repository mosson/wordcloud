<div class="container-fluid">
	<div class="row-fluid">

	  <% flash.each do |key,msg| %>
	    <div class="alert alert-<%= key_to_bs(key) %>">
	      <button type="button" class="close" data-dismiss="alert">Ã—</button>
	      <strong><%= key.to_s.titleize %>!</strong> <%= msg %>
	    </div>
	  <% end %>

	  <%- model_class = Theme -%>
	  <div class="page-header">
	    <h4><%=t '.title', :default => model_class.model_name.human %></h4>
	  </div>

	  <dl class="dl-horizontal">
	    <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
	    <dd><%= @theme.name %></dd>
	    <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
	    <dd><%= image_tag @theme.image.thumb.url %></dd>
	  </dl>

	  <div class="form-actions">
	    <%= link_to t('.back', :default => t("helpers.links.back")),
	                themes_path, :class => 'btn'  %>
	    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	                theme_path(@theme),
	                :method => 'delete',
	                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	                :class => 'btn btn-danger' %>
	  </div>

	</div>
</div>

